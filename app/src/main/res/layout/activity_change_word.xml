<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/progress_bar">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextEnglish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@android:color/white"
        android:hint="Слово"
        android:textColor="#ffffff"
        android:inputType="none"
        android:textColorHighlight="@android:color/white"
        android:textColorHint="@color/WHITE_TRANSPARENT"
        android:textColorLink="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextRussian"
        app:layout_constraintEnd_toEndOf="@+id/editTextRussian"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextRussian"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextRussian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@android:color/white"
        android:hint="Перевод"
        android:textColor="#ffffff"
        android:textColorHighlight="@android:color/white"
        android:textColorHint="@color/WHITE_TRANSPARENT"
        android:textColorLink="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32999998" />

    <LinearLayout
        android:id="@+id/categoriesTextViewLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/categoryChooseCardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextRussian"
        app:layout_constraintVertical_bias="0.76">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выберите категорию"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="или создайте новую"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"/>
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/categoryChooseCardViewHolder"
        android:layout_width="246dp"
        android:layout_height="60dp"
        android:tag="animation"
        android:visibility="invisible"
        app:cardBackgroundColor="@color/WHITE_TRANSPARENT"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextRussian"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/editTextRussian"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:tag="animation4"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:tag="animation3"
            android:text="xenous"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tag="animation2"/>

    </com.google.android.material.card.MaterialCardView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/categoryChooseCardViewHolder"
        app:layout_constraintVertical_bias="0.26">

        <ImageView
            android:id="@+id/deleteWordImageView"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/delete_word" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/deleteWord"
            android:textColor="@color/WHITE_TRANSPARENT"
            android:textSize="14sp"/>
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/categoryChooseCardView"
        android:layout_width="246dp"
        android:layout_height="60dp"
        android:tag="animation"
        app:cardBackgroundColor="@color/WHITE_TRANSPARENT"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextRussian"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/editTextRussian"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.50">

        <EditText
            android:id="@+id/categoryEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:backgroundTint="@color/colorWhite"
            android:tag="animation4"
            android:textColor="@color/colorWhite"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/addNewWordCategoryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:tag="animation3"
            android:text="xenous"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:visibility="visible"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categoriesWhileAddingWordRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tag="animation2"/>

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextRussian"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/editTextRussian"
        app:layout_constraintTop_toBottomOf="@+id/editTextEnglish"
        app:layout_constraintVertical_bias="0.75">

        <ImageView
            android:id="@+id/saveChangesImageView"
            android:layout_width="195dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_background"
            android:src="@drawable/edit_word" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="@string/saveChanges"
            android:textColor="@color/WHITE_TRANSPARENT"
            android:textSize="14sp" />
    </LinearLayout>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/categoriesMaterialCardView"
        android:layout_width="330dp"
        android:layout_height="350dp"
        android:tag="animation"
        android:visibility="invisible"
        app:cardCornerRadius="20dp"
        app:contentPadding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.88">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="animation4"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tag="animation3"
            android:text="xenous"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tag="animation2"/>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/changeWord"
        android:textColor="@color/colorWhite"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextEnglish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.73" />
</androidx.constraintlayout.widget.ConstraintLayout>