<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.github.florent37.expansionpanel.ExpansionHeader
        android:id="@+id/categoryCellExpansionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:expansion_headerIndicator="@id/expansionHeaderIndicator">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/categoryCellMaterialCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:tag="animation"
            app:cardBackgroundColor="@color/WHITE_TRANSPARENT"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/colorWhite"
            app:strokeWidth="3dp">
            <!--Артем, можещь центрировать контент в этой карточки, пожалуйста -->

            <LinearLayout
                android:id="@+id/categoryCellContentLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="@dimen/categories_list_cell_padding_sides"
                android:paddingTop="@dimen/categories_list_cell_padding_vertical"
                android:paddingEnd="@dimen/categories_list_cell_padding_sides"
                android:paddingBottom="@dimen/categories_list_cell_padding_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/archiveWordInEnglishTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:gravity="start"
                        android:tag="animation3"
                        android:text="Категория"
                        android:textColor="@color/colorWhite"
                        android:textSize="30sp" />

                    <ImageView
                        android:id="@+id/expansionHeaderIndicator"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|end"
                        android:layout_weight="0"
                        android:foregroundGravity="center"
                        android:rotation="90"
                        android:src="@drawable/ic_expansion_header_indicator_grey_24dp"
                        android:tint="@color/colorWhite" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/category_actions_linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|end"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:paddingEnd="35dp"
                    android:paddingBottom="10dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/learnWordsTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="5dp"
                        android:text="@string/learnWords"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/shareWordsTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="@string/shareCategory"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </com.github.florent37.expansionpanel.ExpansionHeader>

    <com.github.florent37.expansionpanel.ExpansionLayout
        android:id="@+id/categoryCellExpansionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/expandableRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingTop="10dp"
            android:paddingEnd="30dp" />

    </com.github.florent37.expansionpanel.ExpansionLayout>

</LinearLayout>