<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252525"
    android:padding="@dimen/main_content_padding">

    <TextView
        android:id="@+id/main_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/roboto"
        android:text="@string/app_name"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/main_title_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/main_word_first_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorWhite"

            android:ems="10"
            android:fontFamily="@font/roboto"
            android:hint="@string/main_word_edittext_placeholder"
            android:inputType="textPersonName"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_space_first_height" />

        <EditText
            android:id="@+id/main_word_second_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorWhite"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:hint="@string/main_word_edittext_placeholder"
            android:inputType="textPersonName"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="@dimen/main_word_edittext_text_size" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_space_second_height" />

        <EditText
            android:id="@+id/main_word_category_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorWhite"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:hint="Категория (если нужно)"
            android:inputType="textPersonName"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="@dimen/main_word_edittext_text_size" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_space_second_height" />

        <Button
            android:id="@+id/main_add_word_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bordered_transparent_rectangle"
            android:fontFamily="@font/roboto"
            android:padding="@dimen/main_add_word_button_padding"
            android:text="@string/main_add_word"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

</FrameLayout>